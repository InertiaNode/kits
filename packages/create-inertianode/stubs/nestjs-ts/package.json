{
    "name": "nestjs-inertia-react",
    "private": true,
    "version": "0.0.0",
    "type": "commonjs",
    "scripts": {
        "dev:server": "nest start --watch",
        "dev:server:debug": "nest start --debug --watch",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:debug": "concurrently \"npm run dev:server:debug\" \"npm run dev:client\"",
        "start": "node dist/main",
        "build:server": "nest build",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@inertianode/nestjs": "^1.0.6",
        "@nestjs/common": "^11.0.0",
        "@nestjs/core": "^11.0.0",
        "@nestjs/platform-express": "^11.0.0",
        "@nestjs/serve-static": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^22.16.4",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "concurrently": "^8.2.2",
        "eslint": "^9.31.0",
        "prettier": "^3.6.2",
        "source-map-support": "^0.5.21",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    }
}
