{
    "name": "express-inertia-react",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev:server": "tsx watch server/index.ts",
        "dev:server:debug": "tsx watch --inspect=9229 server/index.ts",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:debug": "concurrently \"npm run dev:server:debug\" \"npm run dev:client\"",
        "start": "node --experimental-transform-types server/index.ts",
        "lint": "tsc -b  && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "@inertianode/express": "^1.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "express": "^5.1.0",
        "tsx": "^4.20.3"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.31.0",
        "@types/node": "^22.16.4",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "concurrently": "^8.2.2",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.37.0"
    }
}
