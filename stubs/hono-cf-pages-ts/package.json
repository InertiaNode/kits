{
    "name": "hono-inertia-react",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev:server": "vite",
        "dev:server:debug": "vite --inspect=9230",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:debug": "concurrently \"npm run dev:server:debug\" \"npm run dev:client\"",
        "build:client": "vite build -c client/vite.config.ts",
        "build:server": "vite build",
        "build": "npm run build:server && npm run build:client",
        "preview": "wrangler pages dev dist/",
        "deploy": "npm run build && wrangler pages deploy dist/",
        "lint": "tsc -b  && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "@inertianode/hono": "^1.0.0",
        "@inertiajs/core": "^2.0.14",
        "@inertiajs/react": "^2.0.14",
        "axios": "^1.10.0",
        "hono": "^4.8.5",
        "laravel-vite-plugin": "^2.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tailwindcss": "^4.1.11"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.31.0",
        "@hono/vite-cloudflare-pages": "^0.4.2",
        "@hono/vite-dev-server": "^0.20.0",
        "@tailwindcss/vite": "^4.1.11",
        "@types/node": "^22.16.4",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "@vitejs/plugin-react": "^4.6.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.37.0",
        "vite": "^5.4.19",
        "wrangler": "^3.114.11"
    }
}
